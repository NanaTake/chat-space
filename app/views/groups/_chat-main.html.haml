.chat-main
  .main-header
    .main-header__left-box
      %h2.current_group
        test
      %ul.main-header__left-box__member-list
        Member:
        %li.main-header__left-box__member-list__member
          = current_user.name
    = link_to 'group_edit_path' do
      .main-header__edit-btn
        Edit
  .messages
    .message
      .message__upper-info
        %p.message__upper-info__talker
          ユーザー名
        %p.message__upper-info__date
          2019/06/22(Sat) 22:41:17
      %p.message__text
        message
  .form-message
    = form_tag('group_message_path(current_group)', method: :post) do
      .input-box
        %input.message_content{name: "body", placeholder: "type a message", type: "text"}/
        %label.input-box__image
          %i.fa.fa-image
        %input#filesend{name: "image", placeholder: "type a image-url", type: "text"}
      .submit
        %input.btn{type: "submit", value: "Send" }/