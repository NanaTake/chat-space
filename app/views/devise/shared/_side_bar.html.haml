.side-bar
  .header
    %h3.header__name
      = current_user.name
    %ul.header__lists
      %li.list
        = link_to new_group_path, data:{turbolinks: :false} do
          = fa_icon 'pencil-square-o', class: 'icon'
      %li.list
        = link_to edit_user_path(current_user), data:{turbolinks: :false} do
          = fa_icon 'cog', class: 'icon'
  .groups
    = render partial: 'devise/shared/group', collection: current_user.groups